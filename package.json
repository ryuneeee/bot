{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "pm2": "tsdx build && pm2 --name ppomppu start ecosystem.config.js --no-daemon --env production",
    "docker": "podman build . -t ryuneeee/ppomppu && podman image tag ryuneeee/ppomppu ryuneeee/ppomppu:latest && podman image tag ryuneeee/ppomppu ryuneeee/ppomppu:$(git rev-parse --short HEAD)",
    "publish": "podman image push --all-tags ryuneeee/ppomppu",

    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "ppomppu",
  "author": "Ryunhee Han",
  "module": "dist/ppomppu.esm.js",
  "size-limit": [
    {
      "path": "dist/ppomppu.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ppomppu.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/node": "^17.0.0",
    "husky": "^7.0.4",
    "size-limit": "^7.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@slack/bolt": "^3.8.1",
    "pm2": "^5.1.2"
  }
}
